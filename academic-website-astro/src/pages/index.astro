---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { siteConfig } from '@/data/site';
import { getCollection } from 'astro:content';

// Get recent publications and posts
const publications = await getCollection('publications');
const posts = await getCollection('posts', ({ data }) => !data.draft);

const recentPublications = publications
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);

const recentPosts = posts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const featuredPublications = publications
  .filter((pub) => pub.data.featured)
  .slice(0, 3);

const author = siteConfig.author;
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-surface-dark">
    <div class="container-wide">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start">
        <!-- Profile Image -->
        <div class="lg:col-span-1 flex justify-center lg:justify-start">
          <div class="relative">
            <div class="w-48 h-48 md:w-64 md:h-64 rounded-full overflow-hidden border-4 border-white dark:border-gray-800 shadow-xl">
              <img
                src="/media/avatar.jpg"
                alt={author.name}
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
            <div class="absolute -bottom-2 -right-2 w-20 h-20 bg-accent-gold rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
          </div>
        </div>

        <!-- Bio -->
        <div class="lg:col-span-2">
          <h1 class="text-4xl md:text-5xl font-serif font-bold text-primary-900 dark:text-gray-100 mb-4">
            {author.name}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-2">
            {author.role}
          </p>
          <p class="text-lg text-primary-700 dark:text-primary-400 mb-6">
            <a href={author.institutionUrl} target="_blank" rel="noopener noreferrer" class="hover:underline">
              {author.institution}
            </a>
          </p>

          <div class="prose prose-lg dark:prose-dark max-w-none mb-8">
            <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
              {author.bio.split('\n\n')[0]}
            </p>
          </div>

          <!-- Interests -->
          <div class="mb-8">
            <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">
              Research Interests
            </h3>
            <div class="flex flex-wrap gap-2">
              {author.interests.map((interest) => (
                <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full text-sm">
                  {interest}
                </span>
              ))}
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4">
            <a href="/publications" class="btn-primary">
              View Publications
            </a>
            <a href={author.cv} target="_blank" rel="noopener noreferrer" class="btn-secondary">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Download CV
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Publications -->
  <section class="section">
    <div class="container-wide">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-3xl font-serif font-bold text-primary-900 dark:text-gray-100">
          Recent Publications
        </h2>
        <a href="/publications" class="text-primary-700 dark:text-primary-400 hover:underline font-medium">
          View all &rarr;
        </a>
      </div>

      <div class="space-y-6">
        {recentPublications.map((pub) => (
          <article class="card p-6">
            <a href={`/publications/${pub.slug}`} class="block group">
              <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 group-hover:text-accent-burgundy dark:group-hover:text-accent-gold transition-colors mb-2">
                {pub.data.title}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                {pub.data.authors.join(', ')}
              </p>
              <div class="flex items-center gap-4 text-sm text-gray-500 dark:text-gray-500">
                <span>{pub.data.publication}</span>
                <span>{pub.data.date.getFullYear()}</span>
              </div>
            </a>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Posts -->
  {recentPosts.length > 0 && (
    <section class="section bg-gray-50 dark:bg-gray-900">
      <div class="container-wide">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl font-serif font-bold text-primary-900 dark:text-gray-100">
            Recent Posts
          </h2>
          <a href="/posts" class="text-primary-700 dark:text-primary-400 hover:underline font-medium">
            View all &rarr;
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {recentPosts.map((post) => (
            <article class="card p-6">
              <a href={`/posts/${post.slug}`} class="block group">
                <time class="text-sm text-gray-500 dark:text-gray-500">
                  {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                </time>
                <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 group-hover:text-accent-burgundy dark:group-hover:text-accent-gold transition-colors mt-2">
                  {post.data.title}
                </h3>
                {post.data.subtitle && (
                  <p class="text-gray-600 dark:text-gray-400 mt-2 line-clamp-2">
                    {post.data.subtitle}
                  </p>
                )}
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Featured Tools -->
  <section class="section">
    <div class="container-wide">
      <h2 class="text-3xl font-serif font-bold text-primary-900 dark:text-gray-100 mb-8">
        Research Tools & Feeds
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/dashboard" class="card p-6 group">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 dark:group-hover:bg-primary-800 transition-colors">
            <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 mb-2">
            MPV Dashboard
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Interactive analysis of Mapping Police Violence data
          </p>
        </a>

        <a href="/ai-news" class="card p-6 group">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 dark:group-hover:bg-primary-800 transition-colors">
            <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 mb-2">
            AI in Policing News
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Curated feed of AI and policing news
          </p>
        </a>

        <a href="/k9-incidents" class="card p-6 group">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 dark:group-hover:bg-primary-800 transition-colors">
            <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 mb-2">
            K9 Incidents
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Police K9 incident news coverage
          </p>
        </a>

        <a href="/media" class="card p-6 group">
          <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-200 dark:group-hover:bg-primary-800 transition-colors">
            <svg class="w-6 h-6 text-primary-700 dark:text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 mb-2">
            Media Mentions
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Research coverage in the media
          </p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
