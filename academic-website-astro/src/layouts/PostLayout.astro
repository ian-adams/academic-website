---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;
const { title, subtitle, date, lastmod, tags, categories } = post.data;
---

<BaseLayout title={title} description={subtitle || ''} article={true}>
  <article class="section">
    <div class="container-narrow">
      <!-- Header -->
      <header class="mb-8">
        <h1 class="text-3xl md:text-4xl font-serif font-bold text-primary-900 dark:text-gray-100 mb-4 text-balance">
          {title}
        </h1>

        {subtitle && (
          <p class="text-xl text-gray-600 dark:text-gray-400 mb-4">
            {subtitle}
          </p>
        )}

        <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-gray-600 dark:text-gray-400">
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            {date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </span>
          {lastmod && (
            <span class="text-gray-500 dark:text-gray-500">
              Updated: {lastmod.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </span>
          )}
        </div>

        <!-- Tags -->
        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-4">
            {tags.map((tag) => (
              <span class="px-2 py-1 text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </header>

      <!-- Content -->
      <div class="prose-academic dark:prose-dark">
        <slot />
      </div>

      <!-- Back link -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <a
          href="/posts"
          class="inline-flex items-center text-primary-700 dark:text-primary-400 hover:text-accent-burgundy dark:hover:text-accent-gold"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Posts
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
