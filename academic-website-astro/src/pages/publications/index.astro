---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const publications = await getCollection('publications');

// Sort by date descending
const sortedPubs = publications.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Group by year
const pubsByYear = sortedPubs.reduce((acc, pub) => {
  const year = pub.data.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(pub);
  return acc;
}, {} as Record<number, typeof publications>);

const years = Object.keys(pubsByYear).map(Number).sort((a, b) => b - a);

// Get unique publication types
const allTypes = new Set<string>();
publications.forEach((pub) => {
  pub.data.publication_types?.forEach((type) => allTypes.add(type));
});
---

<BaseLayout
  title="Publications"
  description="Academic publications by Ian T. Adams, Ph.D."
>
  <section class="section">
    <div class="container-wide">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-serif font-bold text-primary-900 dark:text-gray-100 mb-4">
          Publications
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl">
          Over fifty peer-reviewed publications on policing policy, technology, behavior, and use-of-force in law enforcement.
        </p>
      </header>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
        <div class="card p-4 text-center">
          <div class="text-3xl font-bold text-primary-900 dark:text-gray-100">
            {publications.length}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Total Publications</div>
        </div>
        <div class="card p-4 text-center">
          <div class="text-3xl font-bold text-primary-900 dark:text-gray-100">
            {years.length}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Years Active</div>
        </div>
        <div class="card p-4 text-center">
          <div class="text-3xl font-bold text-primary-900 dark:text-gray-100">
            {Math.max(...years)}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Latest Year</div>
        </div>
        <div class="card p-4 text-center">
          <div class="text-3xl font-bold text-primary-900 dark:text-gray-100">
            {publications.filter((p) => p.data.featured).length}
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Featured Works</div>
        </div>
      </div>

      <!-- Publications by Year -->
      <div class="space-y-12">
        {years.map((year) => (
          <section>
            <h2 class="text-2xl font-serif font-bold text-primary-900 dark:text-gray-100 mb-6 pb-2 border-b border-gray-200 dark:border-gray-700">
              {year}
              <span class="text-base font-normal text-gray-500 dark:text-gray-400 ml-2">
                ({pubsByYear[year].length} {pubsByYear[year].length === 1 ? 'publication' : 'publications'})
              </span>
            </h2>

            <div class="space-y-4">
              {pubsByYear[year].map((pub) => (
                <article class="card p-6 group">
                  <a href={`/publications/${pub.slug}`} class="block">
                    <div class="flex items-start justify-between gap-4">
                      <div class="flex-1 min-w-0">
                        <h3 class="text-lg font-serif font-semibold text-primary-900 dark:text-gray-100 group-hover:text-accent-burgundy dark:group-hover:text-accent-gold transition-colors mb-2">
                          {pub.data.title}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                          {pub.data.authors.map((author, i) => (
                            <>
                              <span class={author.includes('Ian') ? 'font-semibold' : ''}>{author}</span>
                              {i < pub.data.authors.length - 1 && <span>, </span>}
                            </>
                          ))}
                        </p>
                        {pub.data.publication && (
                          <p class="text-sm italic text-gray-500 dark:text-gray-500">
                            {pub.data.publication}
                          </p>
                        )}
                      </div>
                      {pub.data.featured && (
                        <span class="flex-shrink-0 px-2 py-1 text-xs font-medium bg-accent-gold/20 text-accent-gold rounded">
                          Featured
                        </span>
                      )}
                    </div>

                    {pub.data.summary && (
                      <p class="text-sm text-gray-600 dark:text-gray-400 mt-3 line-clamp-2">
                        {pub.data.summary}
                      </p>
                    )}

                    <div class="flex items-center gap-4 mt-4">
                      {pub.data.url_source && (
                        <span class="text-xs text-primary-700 dark:text-primary-400">
                          View Publication
                        </span>
                      )}
                      {pub.data.url_pdf && pub.data.url_pdf.length > 0 && (
                        <span class="text-xs text-primary-700 dark:text-primary-400">
                          PDF Available
                        </span>
                      )}
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </section>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
